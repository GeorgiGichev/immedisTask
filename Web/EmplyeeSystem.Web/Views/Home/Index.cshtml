@model EmployeeSystem.Web.ViewModels.Employees.EmployeesListModel;

@{ this.ViewData["Title"] = "Search Employees"; }
<!DOCTYPE html>
<html>
<head></head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Search Employee</h3></div>
                    <div class="card-body">
                        <form asp-controller="Home" asp-action="Index" method="post">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Name</label>
                                    <input class="form-control" name="Name" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Job title</label>
                                    <input name="JobTitle" class="form-control" />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Department</label>
                                    <input name="Department" class="form-control" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Joined on</label>
                                    <input type="date" name="JoinedOn" class="form-control" />
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-md-8"></div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary btn-block">Search</button>
                                </div>
                                <div class="col-md-2">
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-block">Clear</a>
                                </div>
                            </div>
                        </form>
                        <hr />
                        <div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Job title</th>
                                                <th>Department</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Name</th>
                                                <th>Job title</th>
                                                <th>Department</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var employee in Model.Employees)
                                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id">@employee.Name</a>
                                    </td>
                                    <td>@employee.JobTitle</td>
                                    <td>@employee.Department</td>
                                </tr>
}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6 col-md-offset-2">
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

