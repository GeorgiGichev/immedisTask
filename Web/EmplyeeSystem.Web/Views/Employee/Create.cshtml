@model EmplyeeSystem.Web.ViewModels.Employees.EmployeeInputModel
@using EmplyeeSystem.Data.Models
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Employee</h3></div>
                    <div class="card-body">
                        <form asp-route-returnUrl="" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="required" asp-for="@Model.Name"></label>
                                    <input asp-for="@Model.Name" class="form-control" />
                                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="@Model.Department"></label>
                                    <input asp-for="@Model.Department" class="form-control" />
                                    <span asp-validation-for="@Model.Department" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="required" asp-for="@Model.JobTitle">Job title</label>
                                    <input asp-for="@Model.JobTitle" class="form-control" />
                                    <span asp-validation-for="@Model.JobTitle" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="required" asp-for="@Model.Address"></label>
                                    <input asp-for="@Model.Address" class="form-control" />
                                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="@Model.Salary"></label>
                                    <input asp-for="@Model.Salary" class="form-control" />
                                    <span asp-validation-for="@Model.Salary" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="required" asp-for="@Model.JoinedOn">Date of appointment</label>
                                    <input type="date" asp-for="@Model.JoinedOn" class="form-control" />
                                    <span asp-validation-for="@Model.JoinedOn" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="@Model.ManagerId">Manager id</label>
                                    <input asp-for="@Model.ManagerId" class="form-control" />
                                    <span asp-validation-for="@Model.ManagerId" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <input value="@this.User.FindFirstValue(ClaimTypes.NameIdentifier)" asp-for="@Model.AuthorId" hidden />
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Create</button>
                        </form>
                </div>
                <div class="col-md-6 col-md-offset-2">
                    <section>
                    </section>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
</html>